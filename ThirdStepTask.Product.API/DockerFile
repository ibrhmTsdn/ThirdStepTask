# Multi-stage build for optimized image size
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy project files
COPY ["ThirdStepTask.Product.API/ThirdStepTask.Product.API.csproj", "ThirdStepTask.Product.API/"]
COPY ["ThirdStepTask.Product.Application/ThirdStepTask.Product.Application.csproj", "ThirdStepTask.Product.Application/"]
COPY ["ThirdStepTask.Product.Domain/ThirdStepTask.Product.Domain.csproj", "ThirdStepTask.Product.Domain/"]
COPY ["ThirdStepTask.Product.Infrastructure/ThirdStepTask.Product.Infrastructure.csproj", "ThirdStepTask.Product.Infrastructure/"]
COPY ["ThirdStepTask.Product.Persistence/ThirdStepTask.Product.Persistence.csproj", "ThirdStepTask.Product.Persistence/"]
COPY ["Common/Common.csproj", "Common/"]
COPY ["EventBus/EventBus.csproj", "EventBus/"]
COPY ["EventBus.RabbitMQ/EventBus.RabbitMQ.csproj", "EventBus.RabbitMQ/"]

# Restore dependencies
RUN dotnet restore "ThirdStepTask.Product.API/ThirdStepTask.Product.API.csproj"

# Copy everything else
COPY . .

# Build
WORKDIR "ThirdStepTask.Product.API"
RUN dotnet build "ThirdStepTask.Product.API.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "ThirdStepTask.Product.API.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .

# Create logs directory
RUN mkdir -p /app/logs

ENTRYPOINT ["dotnet", "ThirdStepTask.Product.API.dll"]