# Multi-stage build for optimized image size
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy project files
COPY ["src/Services/Auth/ThirdStepTask.Auth.API/ThirdStepTask.Auth.API.csproj", "src/Services/Auth/ThirdStepTask.Auth.API/"]
COPY ["src/Services/Auth/ThirdStepTask.Auth.Application/ThirdStepTask.Auth.Application.csproj", "src/Services/Auth/ThirdStepTask.Auth.Application/"]
COPY ["src/Services/Auth/ThirdStepTask.Auth.Domain/ThirdStepTask.Auth.Domain.csproj", "src/Services/Auth/ThirdStepTask.Auth.Domain/"]
COPY ["src/Services/Auth/ThirdStepTask.Auth.Infrastructure/ThirdStepTask.Auth.Infrastructure.csproj", "src/Services/Auth/ThirdStepTask.Auth.Infrastructure/"]
COPY ["src/Services/Auth/ThirdStepTask.Auth.Persistence/ThirdStepTask.Auth.Persistence.csproj", "src/Services/Auth/ThirdStepTask.Auth.Persistence/"]
COPY ["src/BuildingBlocks/Common/Common.csproj", "src/BuildingBlocks/Common/"]

# Restore dependencies
RUN dotnet restore "src/Services/Auth/ThirdStepTask.Auth.API/ThirdStepTask.Auth.API.csproj"

# Copy everything else
COPY . .

# Build
WORKDIR "/src/src/Services/Auth/ThirdStepTask.Auth.API"
RUN dotnet build "ThirdStepTask.Auth.API.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "ThirdStepTask.Auth.API.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .

# Create logs directory
RUN mkdir -p /app/logs

ENTRYPOINT ["dotnet", "ThirdStepTask.Auth.API.dll"]