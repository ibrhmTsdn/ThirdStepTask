# Multi-stage build for optimized image size
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy project files
COPY ["ThirdStepTask.API/ThirdStepTask.Auth.API.csproj", "ThirdStepTask.API/"]
COPY ["ThirdStepTask.Auth.Application/ThirdStepTask.Auth.Application.csproj", "ThirdStepTask.Auth.Application/"]
COPY ["ThirdStepTask.Auth.Domain/ThirdStepTask.Auth.Domain.csproj", "ThirdStepTask.Auth.Domain/"]
COPY ["ThirdStepTask.Auth.Infrastructure/ThirdStepTask.Auth.Infrastructure.csproj", "ThirdStepTask.Auth.Infrastructure/"]
COPY ["ThirdStepTask.Auth.Persistence/ThirdStepTask.Auth.Persistence.csproj", "ThirdStepTask.Auth.Persistence/"]
COPY ["Common/Common.csproj", "Common/"]

# Restore dependencies
RUN dotnet restore "ThirdStepTask.API/ThirdStepTask.Auth.API.csproj"

# Copy everything else
COPY . .

# Build
WORKDIR "ThirdStepTask.API"
RUN dotnet build "ThirdStepTask.Auth.API.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "ThirdStepTask.Auth.API.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .

# Create logs directory
RUN mkdir -p /app/logs

ENTRYPOINT ["dotnet", "ThirdStepTask.Auth.API.dll"]